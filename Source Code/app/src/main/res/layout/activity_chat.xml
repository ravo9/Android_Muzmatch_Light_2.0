<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ChatActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_messages"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/main_container_padding_medium"
        android:paddingBottom="@dimen/main_container_bottom_extra_spacing"
        android:paddingStart="@dimen/main_container_padding_medium"
        android:paddingEnd="@dimen/main_container_padding_medium"
        android:clipToPadding="false"
        android:layoutAnimation="@anim/recycler_view_animation" />

    <development.dreamcatcher.muzmatchlight.components.CustomEditText
        android:id="@+id/editText_messageInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/edit_text_background"
        android:paddingStart="@dimen/message_input_start_extra_padding"
        android:paddingEnd="@dimen/message_input_padding_small"
        android:paddingTop="@dimen/message_input_padding_small"
        android:paddingBottom="@dimen/message_input_padding_small"
        android:layout_marginStart="@dimen/message_input_margin_side"
        android:layout_marginEnd="@dimen/message_input_margin_side"
        android:layout_marginBottom="@dimen/message_input_margin_bottom"
        android:inputType="textNoSuggestions" />

</androidx.constraintlayout.widget.ConstraintLayout>
